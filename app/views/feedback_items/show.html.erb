<div class="grid grid-pad">
<div class="col-1-1">
		<div class="content heading">
		<div id ='<%= @feedback_item.id%>' class='feedback <%= @feedback_item.theme %>' data-theme='<%= @feedback_item.theme %>' >
	<div id="container">
			<div id="card" class="<%= @feedback_item.theme %> card show-back" >
				<div id="front" class="front face">
				<% if  @feedback_item.start =='sad'%>
				<img src="/assets/<%=@feedback_item.theme %>-happy.gif"/>
				<% else%>
				<img src="/assets/<%=@feedback_item.theme %>-sad.gif"/>
				<%end%>

				</div>
				<div id="right" class="right face">
				<img src="/assets/<%= @feedback_item.theme %>-ok.gif"/>
				</div>
				<div id="back" class="back face">
				<% if  @feedback_item.start =='sad'%>
				<img src="/assets/<%=@feedback_item.theme %>-sad.gif"/>
				<% else%>
				<img src="/assets/<%=@feedback_item.theme %>-happy.gif"/>
				<%end%>
				</div>
			</div>
		</div>
	   <h3><%= @feedback_item.title %></h3>
		<p><%= @feedback_item.description %></p>
	<input name="<%= @feedback_item.id %>"  value=1 type="radio" class="star {split:2}"/> 
	<input name="<%= @feedback_item.id %>"  value=2 type="radio" class="star {split:2}"/>
	<input name="<%= @feedback_item.id %>"  value=3 type="radio" class="star {split:2}"/>
	<input name="<%= @feedback_item.id %>"  value=4  type="radio" class="star {split:2}"/>
	<input name="<%= @feedback_item.id %>""  value=5 type="radio" class="star {split:2}"/>
	</div>



	<br><br>
	<%= link_to  feedback_items_path do%>
<img src='/assets/back.png' height='48' width='48' class='icon'/><span>Back to List </span><%end%>

<%= link_to  edit_feedback_item_path(@feedback_item) , class:"icon" do %><img src='/assets/edit.png' height='48' width='48'/>Edit<%end%>

</div>
</div>

<script>
$('.star').rating({ callback: function(value, link){ 
   var id  = $(link).parent().parent().parent().attr('id');



   var themeselect= '#'+id;
    if(value!='undefined')
    {
      value=parseInt(value);
      if(value <3)
        $(themeselect+' .card').attr('class', 'card show-back');
      else if (value <=3)
        $(themeselect+' .card').attr('class', 'card show-right');
      else {
        $(themeselect+' .card').attr('class', 'card show-front');

        }

    }


   } });
    function flip(event)
{
           var element = event.currentTarget;

    var targetClassName = element.className;

    
    if(targetClassName == 'card show-front')
        element.className = 'card show-right';
    else if(targetClassName == 'card show-right')
        element.className = 'card show-back';
    else if(targetClassName == 'card show-back')
        element.className = 'card show-front';         
}
</script>
